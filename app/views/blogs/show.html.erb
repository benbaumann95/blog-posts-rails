
<h1 class='text-center'> <%= @blog.title %> </h1>
<h4><%= @blog.content %></h4>
<%= @blog.author %>

<div>
  <i class="fas fa-thumbs-up"></i>
  <p class="likes"><%= @likes  %></p>
</div>




<h5>reviews:</h5>

<div>
  <% @blog.reviews.each do |review| %>
    <p><%= review.name %></p>
    <p><%= review.content %></p>
  <% end %>
</div>

<p><%= link_to "Write a review", new_blog_review_path(@blog)  %></p>

